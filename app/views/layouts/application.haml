!!! 5
%html
  %head
    %meta{'http-equiv' => "Content-Type", :content => "text/html; charset=iso-8859-1"}
    %meta{:name => 'description', :content => "Selectors Choice DJ&#39;s - San Francisco - Podcasts - Funk Reggae Rocksteady Soul LoftStyle"}
    %meta{:name => 'keywords', :content => 'Selectors Choice DJ San Francisco Podcasts Funk Reggae Rocksteady Soul LoftStyle'}
    %link{:rel => "shortcut icon", :href => "/favicon.ico" }
    %title #{@title}
    = csrf_meta_tag
    = stylesheet_link_tag :application, media: :all
    = javascript_include_tag :application
  </head>
  %body
    .container
      %header
        - if signed_in?
          %nav.site_nav
            %ul
              %li            
                = link_to 'dashboard', admin_path
              %li
                = link_to 'sign out', sign_out_path, method: :delete


      .main{:id => @current_section}
        =yield
        .bottom_spacer
    = render '/common/footer'
    
