= track ||= (track || @track)
%li.track
  .hd
    %h2.title #{track.pretty_title}
    .recorded_on 
      - if track.author.present?
        = track.author 
        = "&mdash;".html_safe
      #{track.recorded_on ? track.recorded_on.to_date.strftime("%m %d %Y") : ''}
  .bd 
    .audio
      %audio{src: track.url, preload: false}

    - if track.description.present?      
      .description.markup
        %h3 in this mix
        = markup(track.description)
    .tracklist.markup
      .compactible
        %h3 tracklist
        = markup(track.playlist)
  .ft
    - unless track.style_list.empty?
      .styles
        %h5 Styles
        = track.style_list.map{|t| content_tag "span", t, class: 'tag'}.join.html_safe
    - unless track.tag_list.empty?
      .tags 
        %h5 Tags
        = track.tag_list.map{|t| content_tag "span", t, class: 'tag'}.join.html_safe
    .download
      %a{href: track.url} 
        %i.icon.icon-download 
        Download          